<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GUIController">
   <children>
      <VBox>
         <children>
             <TitledPane collapsible="false" text="Департаменты">
                 <ListView fx:id="deptListView" editable="true">

           </ListView>
             </TitledPane>
            <HBox spacing="5.0">
               <children>
                  <TextField fx:id="deptInput" promptText="название департамента" />
                  <Button fx:id="addDeptBtn" mnemonicParsing="false" onAction="#addDeptBtnClick" text="Добавить" textFill="#1c6fd5" />
                  <Button fx:id="remDeptBtn" mnemonicParsing="false" onAction="#remDeptBtnClick" text="Удалить" textFill="#e51616" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <Separator orientation="VERTICAL" />
      <VBox>
         <children>
            <Label fx:id="statusLbl" alignment="BOTTOM_CENTER" textFill="#100049">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" />
            <HBox spacing="5.0">
               <children>
                  <TextField fx:id="empInput" promptText="параметры работника">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></TextField>
                  <Button fx:id="addEmpBtn" mnemonicParsing="false" onAction="#addEmpBtnClick" text="Добавить" textFill="#1c6fd5" />
                  <Button fx:id="remEmpBtn" mnemonicParsing="false" onAction="#remEmpBtnClick" text="Удалить" textFill="#e51616" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
